    <!-- fontawesome -->
    <script src="https://kit.fontawesome.com/e06ad0a210.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <!-- Css -->
    <link rel="stylesheet" href="stylesheets/stylePerfil.css">
    <link rel="stylesheet" href="stylesheets/default.css">
    <title>The Blessed</title>
</head>

<body>
    <%- include('../navbar.ejs') %>
      <div class="userPerfil">
        <div class="icon"></div>
      <h2 class="Nome"><%= usuario.user %></h2>
      <button>Create</button>
      <br>
      </div>
      <div class="comentarios">
        <% comentarios.forEach(function(comentario,index){ %>
          <div class="comentario">
            <h3><%- comentario.filme%></h1>
              <div class="crud-icons">
                <div class="icon-edit">
                  <i class="fa-solid fa-pencil"></i>
                </div>
                <div class="icon-delete">
                  <i class="fa-solid fa-trash"></i>
                </div>
                <div class="icon-show">
                <i class="fa-solid fa-info"></i>
                </div>
                
              </div>
           <!--  <img src="imagens/<%-comentario.filme %>"> -->
            <div class="rating">
              <% for(var e = 0; e < Math.floor(comentario.nota); e++){%>
              <span class="fa fa-star checked"></span>
              <%}%>
              <%if(comentario.nota % 1 != 0){%>
                <span class="fa fa-star-half-o  checked"></span>
                <%}%>
                <% for(var e = 0; e < Math.floor(5 - comentario.nota); e++){%>
                  <span class="fa fa-star-o checked"></span>
                  <%}%>
          </div>
          </div>
          <%})%>
      </div>
      <form action="/perfil/comentario" method="post">
        <input type="text" name="comentario[filme]" placeholder="Titulo" />
        <input type="text" name="comentario[nota]" placeholder="0-5" />
        <button type="submit">Cadastrar</button>
        </form>
    

    <a href="/sair">Sair</a>
    <%- include('../footer.ejs') %>
   
</body>

</html>